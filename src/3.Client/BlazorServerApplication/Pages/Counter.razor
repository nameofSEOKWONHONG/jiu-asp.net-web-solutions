@page "/counter"
@using ClientApplication.ViewModel
@using ClientApplication.Services
@inject LoginService SampleService
@inject CounterStateViewModel _counterStateViewModel;
@* @attribute [Authorize] *@

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @_counterStateViewModel.Count</p>

<MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="(() => _counterStateViewModel.Count++)">Click me</MudButton>