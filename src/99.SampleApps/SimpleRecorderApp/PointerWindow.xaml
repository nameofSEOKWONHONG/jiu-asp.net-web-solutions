<Window x:Class="SimpleRecorderWpf.PointerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleRecorderWpf"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Opacity="0.5"
        Topmost="True"
        ShowInTaskbar="False"
        WindowState="Maximized"
        AllowsTransparency="True" Background="{x:Null}">

    <Grid>
        <Canvas x:Name="canvas" Background="Transparent">
            <Ellipse x:Name="pointer"               
                     Visibility="Visible"
                     Width="60"
                     Height="60"
                     Stroke="Yellow"
                     Fill="Transparent"
                     StrokeThickness="26"
                     Canvas.Left="0"
                     Canvas.Top="0">
            </Ellipse>            
            
            <Ellipse
                x:Name="highlight"
                Visibility="Hidden"
                Width="40"
                Height="40"
                Stroke="Red"
                Fill="Transparent"
                StrokeThickness="10"
                Canvas.Left="0"
                Canvas.Top="0"/>
        </Canvas>
    </Grid>
</Window>
